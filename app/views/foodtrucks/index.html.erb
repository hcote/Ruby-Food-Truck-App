<p id="notice"><%= notice %></p>

<h1>Foodtrucks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Truck ID</th>
      <th>User ID</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Menu</th>
      <th>Foodtype</th>
      <!-- <th>Logo</th> -->
      <!-- <th>Rating</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foodtrucks.each do |foodtruck| %>
      <tr>
       <td><%= foodtruck.name %></td>
        <td><%= foodtruck.id %></td>
        <td><%= foodtruck.user_id %></td>
        <td><%= foodtruck.latitude %></td>
        <td><%= foodtruck.longitude %></td>
        <td><%= foodtruck.menu %></td>
        <td><%= foodtruck.foodtype %></td>
        <!-- <td><%= foodtruck.logo %></td> -->
        <!-- <td><%= foodtruck.rating %></td> -->
        <td><%= link_to 'View', foodtruck %></td>
        <td><%= link_to 'Edit', edit_foodtruck_path(foodtruck) %></td>
        <td><%= link_to 'Destroy', foodtruck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
