<h2>Sign Up</h2>
<hr>
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "email@example.com", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Must be at least 6 characters", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :owner, "Are you a Food Truck Owner?" %>
    <%= f.check_box :owner %> Yes
  </div>
  <%= f.submit "Sign Up", class: "btn btn-block btn-default" %>
<% end %>
<br>
<p>Already have an account? <%= link_to "Click here", login_path %> to log in.</p>
